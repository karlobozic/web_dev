{{> main-menu active="signup"}}

<section class="section">
      <div class="hero-body has-text-centered">

  <h1 class="title">Sign up</h1>
      </div>
    <div class="columns is-mobile is-centered">

  <div class="columns is-vcentered">

                <div class="box box-link-hover-shadow">
<div class="title p-3 is-flex">
  <form action="/register" method="POST">
    <label class="label">Name</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <input class="input is-medium is-rounded " type="text" placeholder="First Name" name="firstName">
        </div>
        <div class="field">
          <input class="input is-medium is-rounded" type="text" placeholder="Last Name" name="lastName">
        </div>
      </div>
    </div>
    <div class="field">
      <label class="label">Email</label> <input class="input is-medium is-rounded" type="text" placeholder="Enter email" name="email">
    </div>
    <div class="field">
      <label class="label">Password</label> <input class="input is-medium is-rounded" type="password" placeholder="Enter Password" name="password">
    </div>
    <div class="field is-grouped">
      <button class="button is-block is-fullwidth is-primary is-medium is-rounded">Sign up</button>
    </div>
  </form>
      </div>

    </div>
    </div>

</section>