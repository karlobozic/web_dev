{{> menu active="map"}}

<section class="hero">
  <div class="hero-body has-text-centered">
    <p class="title ">
      Map Page </p>
  </div>
    <div class="hero-body has-text-centered">
      Below is the info about the rivers </p>
  </div>


    {{#each river}}
    <tr>
    <div class="columns is-mobile is-centered">
      <div class="column is-8 is-offset-1d">
        <div class="box box-link-hover-shadow">
            <div class="column">
                <div class="card-image">
                  <figure class="image is-200x200">
                    <img src={{img}}>
                  </figure>
                </div>
            <div class="column">
              <p class="title hero-body has-text-centered">
                {{name}}
              </p>
              <p class="subtitle hero-body has-text-centered">
                {{description}}
              </p>
              <p class="hero-body has-text-centered">
                {{longitude}}
                {{latitude}}
              </p>
            </div>
            <br>
          </div>
        </div>
      </div>
    </div>

    </tr>
  {{/each}}
  </tbody>
</table>